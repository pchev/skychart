+/***************************************************/
+/*                                                 */
+/* vCalcRADec()                                    */
+/*                                                 */
+/* Update vector with RA and Dec based on x,y,z    */
+/*                                                 */
+/***************************************************/
+
+void vCalcRADec(Vec *v)
+{
+   v->lon = atan2(v->y, v->x)/deg2rad;
+   v->lat = asin(v->z)/deg2rad;
+
+   while(v->lon >= 360.) v->lon -= 360.;
+   while(v->lon <    0.) v->lon += 360.;
+
+   return;
+}
