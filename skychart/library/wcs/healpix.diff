+/***************************************************/
+/*                                                 */
+/* vDot()                                          */
+/*                                                 */
+/* Vector dot product.                             */
+/*                                                 */
+/***************************************************/
+
+double vDot(Vec *a, Vec *b)
+{
+   double sum;
+
+   sum = a->x * b->x
+       + a->y * b->y
+       + a->z * b->z;
+
+   return sum;
+}
