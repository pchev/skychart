+      {
+         if(debug > 1)
+            printf("TOAREV> Level %2d, Subquadrant 11\n", level);
+
+              if(prime    == 2) prime = 2;
+         else if(opposite == 2) prime = 2;
+         else                   prime = 1;
+
+         vCopy(     &center, &corner[0]);
+         vCopy(&midpoint[1], &corner[1]);
