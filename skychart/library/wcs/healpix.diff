+/***************************************************/
+/*                                                 */
+/* vNormalize()                                    */
+/*                                                 */
+/* Normalize the vector                            */
+/*                                                 */
+/***************************************************/
+
+double vNormalize(Vec *v)
+{
+   double len;
+
+   len = 0.;
+
+   len = sqrt(v->x * v->x + v->y * v->y + v->z * v->z);
+
+   if(len == 0.)
+      len = 1.;
+
+   v->x = v->x / len;
+   v->y = v->y / len;
+   v->z = v->z / len;
+
+   return len;
+}
