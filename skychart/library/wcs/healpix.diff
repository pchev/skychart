+/***************************************************/
+/*                                                 */
+/* vCalcXYZ()                                      */
+/*                                                 */
+/* Update vector with x,y,z based on RA,Dec        */
+/*                                                 */
+/***************************************************/
+
+void vCalcXYZ(Vec *v)
+{
+   v->x = cos(v->lat * deg2rad) * cos(v->lon * deg2rad);
+   v->y = cos(v->lat * deg2rad) * sin(v->lon * deg2rad);
+   v->z = sin(v->lat * deg2rad);
+
+   return;
