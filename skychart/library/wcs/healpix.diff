+/*                                                 */
+/***************************************************/
+
+void vPixCenter(Vec *a, Vec *b, Vec *c, Vec *d, Vec *v)
+{
+   v->x = a->x + b->x + c->x + d->x;
+   v->y = a->y + b->y + c->y + d->y;
+   v->z = a->z + b->z + c->z + d->z;
+
