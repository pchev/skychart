+/***************************************************/
+/*                                                 */
+/* vCross()                                        */
+/*                                                 */
+/* Vector cross product.                           */
+/*                                                 */
+/***************************************************/
+
+int vCross(Vec *v1, Vec *v2, Vec *v3)
+{
+   v3->x =  v1->y*v2->z - v2->y*v1->z;
+   v3->y = -v1->x*v2->z + v2->x*v1->z;
+   v3->z =  v1->x*v2->y - v2->x*v1->y;
+
+   if(v3->x == 0.
+   && v3->y == 0.
+   && v3->z == 0.)
+      return 0;
+
+   return 1;
+}
