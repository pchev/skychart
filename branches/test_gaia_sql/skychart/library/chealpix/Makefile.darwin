##############################################################################

CFLAGS= -O3 -fPIC -m32 
SO_Name       = libchealpix.dylib
LIBFLAGS      = -m32 -Wl,-single_module -dynamiclib  -lc -lm -mmacosx-version-min=10.10

OBJS =	chealpix.o

all: $(SO_Name)

$(SO_Name): $(OBJS)
	$(CC) $(CFLAGS) $(LIBFLAGS) -o $@ $(OBJS)

chealpix.o:	chealpix.h chealpix.c

clean:
	rm -f *.a *.o $(SO_Name)
