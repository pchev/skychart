#
#   Makefile.fpc for Varobs
#

[package]
name=varobs
version=3

[target]
programs=varobs varobs_lpv_bulletin

[require]
packages=rtl

[compiler]
unittargetdir=units/$(CPU_TARGET)-$(OS_TARGET)-$(LCL_PLATFORM)
includedir=./
options= $(opt_target) $(fpcopts) -dUseCThreads -dLCL -dLCL$(LCL_PLATFORM) -MObjFPC -Sgi -vewni -l 
unitdir=../skychart/component/uniqueinstance/lib/$(CPU_TARGET)-$(OS_TARGET)/ ../skychart/component/jdcalendar/lib/$(CPU_TARGET)-$(OS_TARGET)-$(LCL_PLATFORM)/ ../skychart/component/downloaddialog/lib/$(CPU_TARGET)-$(OS_TARGET)-$(LCL_PLATFORM)/ ../skychart/component/enhedits/lib/$(CPU_TARGET)-$(OS_TARGET)-$(LCL_PLATFORM)/ ../skychart/component/synapse/source/lib/lib/$(CPU_TARGET)-$(OS_TARGET)-$(LCL_PLATFORM)/ $(LAZDIR)/components/printers/lib/$(CPU_TARGET)-$(OS_TARGET)/$(LCL_PLATFORM)/ $(LAZDIR)/lcl/units/$(CPU_TARGET)-$(OS_TARGET)/ $(LAZDIR)/components/cairocanvas/lib/$(CPU_TARGET)-$(OS_TARGET)/$(LCL_PLATFORM)/ $(LAZDIR)/lcl/units/$(CPU_TARGET)-$(OS_TARGET)/$(LCL_PLATFORM)/ $(LAZDIR)/packager/units/$(CPU_TARGET)-$(OS_TARGET)/  $(LAZDIR)/components/lazutils/lib/$(CPU_TARGET)-$(OS_TARGET) $(LAZDIR)/ideintf/units/$(CPU_TARGET)-$(OS_TARGET)/$(LCL_PLATFORM) ./

[clean]
files=$(wildcard $(COMPILER_UNITTARGETDIR)/*$(OEXT)) \
      $(wildcard $(COMPILER_UNITTARGETDIR)/*$(PPUEXT)) \
      $(wildcard $(COMPILER_UNITTARGETDIR)/*$(RSTEXT)) \
      $(wildcard $(COMPILER_UNITTARGETDIR)/*.compiled) \
      $(wildcard *$(OEXT)) $(wildcard *$(PPUEXT)) $(wildcard *$(RSTEXT))

[prerules]
LAZDIR=%LAZDIR%
# Compiler options
ifndef fpcopts 
fpcopts=-O3 -OoREGVAR -Ch2000000 -CX -XX -Xs 
endif
# LCL Platform
ifndef LCL_PLATFORM
ifeq ($(OS_TARGET),win32)
LCL_PLATFORM=win32
opt_target= -WG
else
ifeq ($(OS_TARGET),win64)
LCL_PLATFORM=win32
opt_target= -WG
else
ifeq ($(OS_TARGET),darwin)
LCL_PLATFORM=qt
opt_target= -k-macosx_version_min -k10.6
else
LCL_PLATFORM=gtk2
opt_target=
endif
endif
endif
endif
export LCL_PLATFORM

[rules]
.PHONY: all

outdir:
	mkdir -p units/$(CPU_TARGET)-$(OS_TARGET)-$(LCL_PLATFORM)

all: outdir varobs$(EXEEXT) varobs_lpv_bulletin$(EXEEXT)


